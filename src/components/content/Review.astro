---
// props
export interface Props {
    review: Object;
}
const { review } = Astro.props;
---

<div class="flex flex-col gap-4 bg-radial-[at_90%_90%] from-white via-mongoose-100 to-mongoose-100 rounded-lg p-8 shadow-2xl break-inside-avoid-column">
    <div class="flex flex-col xl:flex-row xl:items-center gap-4">
        <img src="https://imgix.cosmicjs.com/199cd520-ce66-11f0-ab33-09cb31e91e16-appic-DfWPponVHb0-unsplash.jpg?w=200" class="size-12 xl:size-16 border-mongoose-300 border-r-4 border-b-3 rounded-full object-cover shadow-sm" />

        <div class="space-y-1">
            <div class="font-semibold text-lg lg:text-xl font-heading text-balance uppercase tracking-tight text-mongoose-950 leading-tight">{review.title}</div>

            <div class="flex">
                {
                    [...Array(5)].map((_, index) => (
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 fill-amber-400">
                            <path
                                fill-rule="evenodd"
                                d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
                                clip-rule="evenodd"
                            />
                        </svg>
                    ))
                }
            </div>
        </div>
    </div>

    <div class="text-mongoose-900 text-sm font-light">{review.content}</div>

    <div>
        <div class="text-black text-lg font-medium">{review.name}</div>
        <div class="text-mongoose-900 text-sm">{review.repair} in {review.location}</div>
    </div>
</div>
