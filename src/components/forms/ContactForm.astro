---
export const prerender = false;

import { siteConfig } from "@/config";
//import { actions } from "astro:actions";

// props
export interface Props {
    darkTheme?: boolean;
    showPhone?: boolean;
}
const { darkTheme = false, showPhone = true } = Astro.props;

// content
//const result = Astro.getActionResult(actions.contact);
//action={"/contact/success/" + actions.contact}
---

<h3 class="text-white text-balance max-w-lg mb-4">Ready to get back on the trail?</h3>
<p class="text-mongoose-100 mb-6">Once you submit the form below, our service team will review your request and reach out within 24 business hours. Weâ€™ll discuss the issues you're seeing, provide a preliminary estimate or diagnostic availability, and schedule a drop-off time that works for you.</p>

<form class="space-y-6" id="form-contact" method="POST">
    <div class="space-y-6">
        <div class="space-y-1 sm:space-y-2">
            <label for="name" class:list={[darkTheme && `text-mongoose-300`]}>Name</label>
            <input type="text" autocomplete="name" name="name" id="name" required />
        </div>

        <div class="space-y-1 sm:space-y-2">
            <label for="email" class:list={[darkTheme && `text-mongoose-300`]}>E-mail</label>
            <input type="email" autocomplete="email" name="email" id="email" required />
        </div>

        <div class="space-y-1 sm:space-y-2">
            <label for="phone" class:list={[darkTheme && `text-mongoose-300`]}>Phone</label>
            <input type="tel" name="phone" id="phone" aria-describedby="phone-optional" autocomplete="tel" />
        </div>
    </div>

    <div class="hidden">
        <label for="zip" class:list={[darkTheme && `text-mongoose-300`]}>Zip Code</label>
        <input name="zip" id="zip" />
    </div>

    <div class="space-y-1 sm:space-y-2 flex flex-col">
        <label for="message" class:list={[darkTheme && `text-mongoose-300`]}>How can I help you?</label>
        <textarea id="message" name="message" aria-describedby="message-optional" class="h-48"></textarea>
    </div>

    <input type="hidden" name="path" id="path" value={Astro.url.pathname} />
    <input type="hidden" name="marketing" id="marketing" value="" />

    <div class="flex flex-col gap-y-6 md:flex-row md:justify-between md:items-center mt-4 lg:mt-0">
        <button class:list={[darkTheme && `button-inverse text-xl`, `button-success button`]}>Let's Talk</button>

        {
            showPhone && (
                <div class:list={[`text-base md:text-right text-center`, darkTheme ? `text-mongoose-800` : `text-mongoose-50`]}>
                    We're also available for a <br />
                    call or text at{" "}
                    <a href={`tel:${siteConfig.phone.base}`} class="underline">
                        {siteConfig.phone.formatted}
                    </a>
                    .
                </div>
            )
        }
    </div>
</form>
