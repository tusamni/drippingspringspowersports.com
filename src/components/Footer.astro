---
import { siteConfig } from "@/config";

import Container from "@/components/layout/Container";
import Logo from "@/components/logos/Logo";
import Manufacturers from "@/components/content/Manufacturers";
---

<div class="bg-mongoose-950 py-10 lg:py-14">
    <Container>
        <Manufacturers />
    </Container>
</div>

<div class="bg-black py-14 lg:py-20">
    <Container>
        <div class="flex flex-col md:flex-row items-center md:items-start lg:items-center justify-center md:justify-between w-full max-md:gap-6">
            <Logo logoWidth="w-60 lg:w-80" />

            <div class="text-sm text-stone-200 md:w-100 lg:w-120 text-balance text-center md:text-right">Dripping Springs Outdoor Powersport is a locally owned and operated repair facility. We service all makes and models, including ATVs, dirt bikes and more.</div>
        </div>

        <div class="flex flex-col lg:flex-row items-center justify-between mt-8 max-lg:gap-4">
            <ul class="mt-8 flex max-sm:flex-wrap max-sm:justify-center max-sm:gap-y-2 gap-8 text-white font-medium uppercase font-heading text-base sm:text-xl tracking-tight">
                <li><a href="/">Home</a></li>
                <li><a href="/services/">Services</a></li>
                <li><a href="/rates/">Rates</a></li>
                <li><a href="/about/">About Us</a></li>
                <li><a href="/faq/">FAQ</a></li>
            </ul>

            <div class="flex flex-row items-center gap-6 text-lg sm:text-xl font-heading uppercase tracking-tight text-white antialiased font-semibold">
                <div><a href=`tel:${siteConfig.phone.base}`>{siteConfig.phone.formatted}</a></div>
                <div>
                    <a href="/contact/" class="button button-primary button-inverse">Contact Us</a>
                </div>
            </div>
        </div>
    </Container>
</div>
