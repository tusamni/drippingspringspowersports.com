---
// props
export interface Props {
	size?: "small" | "large" | "xlarge";
	paddingStarts?: "none" | "small" | "medium" | "large";
	mobilePadding?: boolean;
	classes?: string;
}
const { size = "large", paddingStarts = "none", classes } = Astro.props;
---

<div class:list={[paddingStarts === "small" && "sm:px-8 md:px-8 lg:px-12", paddingStarts === "medium" && "md:px-8 lg:px-12", paddingStarts === "large" && "lg:px-12", paddingStarts === "none" && "px-6 sm:px-8 md:px-8 lg:px-12", classes]}>
	<div class:list={["mx-auto", size === "xlarge" && "max-w-[1650px]", size === "large" && "max-w-screen-2xl", size === "small" && "max-w-7xl"]}>
		<slot />
	</div>
</div>
