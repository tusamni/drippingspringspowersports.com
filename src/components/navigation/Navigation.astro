---
import { Image } from "@astrojs/image/components";
---

<header class="relative h-24 bg-stone-100" x-data="{ mobileMenuOpen: false }">
    <!-- Main navbar for large screens -->
    <div class="relative z-30 mx-auto flex h-full w-full max-w-screen-xl items-center border-b border-stone-300/60 bg-stone-100 px-4 sm:px-6 lg:px-8">
        <nav class="flex w-full items-center justify-between">
            <div class="flex items-center space-x-8 lg:space-x-12">
                <!-- Logo-->
                <!-- <a href="index.html" aria-label="Home" class="flex flex-shrink-0 items-center text-xl font-black"></a> -->

                <div class="hidden items-center space-x-3 md:flex lg:space-x-4">
                    <a href="about.html" class="inline-block px-4 py-2 font-medium text-stone-700 hover:bg-stone-50 hover:text-stone-900"> About</a>
                    <a href="pricing.html" class="inline-block px-4 py-2 font-medium text-stone-700 hover:bg-stone-50 hover:text-stone-900">
                        Pricing
                    </a>
                </div>
            </div>

            <div>
                <div class="flex items-center space-x-4">
                    <a
                        class="group inline-flex items-center justify-center bg-stone-700 px-5 py-2.5 text-base font-medium text-white duration-150 ease-in-out hover:bg-stone-900"
                        href="signup.html"
                    >
                        Contact Me
                    </a>
                    <div class="md:hidden">
                        <div>
                            <button
                                class="group flex cursor-pointer items-center justify-center border border-stone-400/75 bg-stone-50 p-3 transition duration-300 ease-in-out focus:outline-none"
                                aria-label="Toggle Navigation"
                                x-on:click="mobileMenuOpen=!mobileMenuOpen"
                            >
                                <span class="relative h-3.5 w-4 transform transition duration-500 ease-in-out">
                                    <span
                                        class="absolute top-0 left-0 block h-0.5 w-full rotate-0 transform rounded-full bg-stone-600 opacity-100 transition duration-300 ease-in-out group-hover:bg-stone-900"
                                        x-bind:class="{ 'w-0 top-1.5 left-1/2': mobileMenuOpen }"></span>
                                    <span
                                        class="absolute left-0 top-1.5 block h-0.5 w-full rotate-0 transform rounded-full bg-stone-600 opacity-100 transition duration-300 ease-in-out group-hover:bg-gray-900"
                                        x-bind:class="{ 'rotate-45': mobileMenuOpen }"></span>
                                    <span
                                        class="absolute left-0 top-1.5 block h-0.5 w-full rotate-0 transform rounded-full bg-stone-600 opacity-100 transition duration-300 ease-in-out group-hover:bg-gray-900"
                                        x-bind:class="{ '-rotate-45': mobileMenuOpen }"></span>
                                    <span
                                        class="absolute left-0 top-3 block h-0.5 w-full rotate-0 transform rounded-full bg-stone-600 opacity-100 transition duration-300 ease-in-out group-hover:bg-gray-900"
                                        x-bind:class="{ 'w-0 top-1.5 left-1/2': mobileMenuOpen }"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!-- Mobile Menu-->
    <div class="md:hidden">
        <div
            x-show="mobileMenuOpen"
            x-transition:enter="duration-200 ease-out"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="duration-200 ease-in"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            class="fixed inset-0 z-20 bg-stone-900 bg-opacity-25 backdrop-blur"
        >
        </div>

        <div
            x-show="mobileMenuOpen"
            x-transition:enter="duration-300 ease-out"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="duration-200 ease-in"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-95"
            class="absolute inset-x-0 top-24 z-30 overflow-hidden bg-stone-100 px-5 pt-4 pb-8 duration-300"
            x-on:click.away="mobileMenuOpen = false"
        >
            <div>
                <div>
                    <div class="flex flex-col divide-y divide-stone-400/75">
                        <a href="index.html" class="block px-4 pt-4 pb-2 font-medium text-stone-700 hover:bg-stone-50 hover:text-stone-900"> Home</a>
                        <a href="about.html" class="block px-4 pt-4 pb-2 font-medium text-stone-700 hover:bg-stone-50 hover:text-stone-900"> About</a>
                        <a href="pricing.html" class="block px-4 pt-4 pb-2 font-medium text-stone-700 hover:bg-stone-50 hover:text-stone-900">
                            Pricing
                        </a>
                        <a href="contact.html" class="block px-4 pt-4 pb-2 font-medium text-stone-700 hover:bg-stone-50 hover:text-stone-900">
                            Contact
                        </a>
                    </div>

                    <div class="mt-6">
                        <a
                            href="signin.html"
                            class="group inline-flex w-full items-center justify-center border border-stone-800 px-5 py-2.5 text-base font-medium text-stone-800 duration-150 ease-in-out hover:bg-stone-800 hover:text-white"
                        >
                            Sign in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
